<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.created_at.strftime('%F') %></td>
<!--        <td><%#= link_to 'Show', product, class: "btn btn-primary" %></td>-->
<!--        <td><%#= link_to 'Edit', edit_product_path(product) %></td>-->
<!--        <td><%#= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        <td>
          <div class="btn-group" role="group" aria-label="Basic outlined example">
            <%= link_to 'Show', product, class: "btn btn-outline-primary" %>
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-outline-primary' %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-primary" %>
