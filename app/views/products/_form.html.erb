<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.text_field :code, class: 'form-control', placeholder: 'Code'%>
  </div>

  <div class="mb-3">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>

  <div class="mb-3">
    <%= form.text_field :price, class: 'form-control', placeholder: 'Price' %>
  </div>

  <div class="mb-3">
    <%= form.number_field :quantity, class: 'form-control', placeholder: 'Quantity' %>
  </div>

  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary'%>
  </div>
<% end %>
